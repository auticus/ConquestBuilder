<Window x:Class="ConquestBuilder.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ConquestBuilder"
        xmlns:localView="clr-namespace:ConquestBuilder.ViewModels"
        mc:Ignorable="d"
        Title="Conquest Builder" Height="450" Width="800">
    <Window.DataContext>
        <localView:MainViewModel/>
    </Window.DataContext>
    <Grid>
        <Button Content="Load Data" HorizontalAlignment="Left" Margin="99,66,0,0" VerticalAlignment="Top" Command="{Binding LoadDataCommand}"/>

    </Grid>
</Window>
